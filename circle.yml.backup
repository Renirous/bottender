# circle.yml
machine:
  timezone:
    Asia/Taipei
  node:
    version: 7
  environment:
    YARN_VERSION: 0.24.5
    PATH: "${PATH}:${HOME}/.yarn/bin"

dependencies:
  cache_directories:
    - ~/.yarn
    - ~/.cache/yarn
    - ./node_modules
  pre:
    - |
      if [[ ! -e ~/.yarn/bin/yarn || $(yarn --version) != "${YARN_VERSION}" ]]; then
        curl -o- -L https://yarnpkg.com/install.sh | bash -s -- --version $YARN_VERSION
      fi
  override:
    - yarn:
        pwd: ./


test:
  override:
    - npm run lint:
        pwd: ./
    - npm run check:
        pwd: ./
    - npm run testonly:cov -- --no-cache:
        pwd: ./
  post:
    - cp -R coverage $CIRCLE_ARTIFACTS/cov
    - cp junit.xml $CIRCLE_TEST_REPORTS/junit.xml
