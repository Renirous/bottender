{
  "private": true,
  "name": "toolbot",
  "version": "0.8.2",
  "description": "Implement what you want here.",
  "license": "UNLICENSED",
  "main": "bin/go.js",
  "repository": "https://github.com/Yoctol/toolbot",
  "bin": {
    "toolbot": "bin/cli.js"
  },
  "scripts": {
    "check": "flow check",
    "lint": "eslint bin src scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "precommit": "lint-staged",
    "test": "npm run lint:fix && npm run check && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-yoctol": "^0.5.1",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-config-yoctol-base": "^0.12.5",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^2.1.1",
    "flow-bin": "^0.46.0",
    "husky": "^0.13.3",
    "jest": "^20.0.3",
    "jest-junit": "^1.5.1",
    "lint-staged": "^3.4.2",
    "prettier": "^1.3.1",
    "timekeeper": "^1.0.0"
  },
  "dependencies": {
    "cross-env": "^5.0.0",
    "debug": "^2.6.8",
    "delay": "^2.0.0",
    "handlebars": "^4.0.10",
    "invariant": "^2.2.2",
    "jsonfile": "^3.0.0",
    "lru-cache": "^4.0.2",
    "messaging-api-line": "^0.1.0-2",
    "messaging-api-messenger": "^0.1.0-2",
    "mongodb": "^2.2.26",
    "prop-types": "^15.5.10",
    "random-item": "^1.0.0",
    "rollbar": "^2.0.1",
    "shelljs": "^0.7.7",
    "snake-case": "^2.1.0",
    "thenify": "^3.3.0",
    "warning": "^3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "Dangerous.*\\.js",
      "dangerous.*\\.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 87,
        "functions": 87,
        "lines": 87,
        "statements": 87
      }
    },
    "testResultsProcessor": "./node_modules/jest-junit",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
