{
  "name": "toolbot-core-experiment",
  "version": "0.9.0-1",
  "license": "UNLICENSED",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && babel src -d lib --ignore __tests__",
    "clean": "rimraf lib",
    "check": "flow check",
    "lint": "eslint bin src scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "precommit": "lint-staged",
    "test": "npm run lint:fix && npm run check && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit",
    "testonly:watch": "jest --watch",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-yoctol": "^0.5.1",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-config-yoctol-base": "^0.12.5",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.1",
    "flow-bin": "^0.47.0",
    "husky": "^0.13.4",
    "jest": "^20.0.4",
    "jest-junit": "^1.5.1",
    "lint-staged": "^3.5.1",
    "prettier": "^1.3.1",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "body-parser": "^1.17.2",
    "debug": "^2.6.8",
    "delay": "^2.0.0",
    "express": "^4.15.3",
    "invariant": "^2.2.2",
    "ioredis": "^3.1.0",
    "jfs": "^0.2.6",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.0",
    "lodash": "^4.17.4",
    "messaging-api-line": "^0.1.0-2",
    "messaging-api-messenger": "^0.1.0-2",
    "micro": "^7.3.3",
    "mongodb": "^2.2.27",
    "ngrok": "^2.2.10",
    "prop-types": "^15.5.10",
    "quick-lru": "^1.0.0",
    "random-item": "^1.0.0",
    "restify": "^4.3.0",
    "shortid": "^2.2.8",
    "thenify": "^3.3.0",
    "warning": "^3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "Dangerous.*\\.js",
      "dangerous.*\\.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testResultsProcessor": "./node_modules/jest-junit",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  }
}
